@model List<Portfolio>
@{
    ViewData["Title"] = "Portfolio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Title -->
<div class="page-title light-background">
   <div class="container">
      <h1>Portfolio</h1>
      <nav class="breadcrumbs">
         <ol>
            <li><a href="/Home/Index">Anasayfa</a></li>
            <li class="current">Portfolio</li>
         </ol>
      </nav>
   </div>
</div><!-- End Page Title -->
<!-- About Section -->


<section id="portfolio" class="portfolio section">

   <div class="container">

      <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

         <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="500">
            <li data-filter="*" class="filter-active">Hepsi</li>
            <li data-filter=".filter-app">Uygulama</li>
            <li data-filter=".filter-product">Proje</li>
            <li data-filter=".filter-branding">Web</li>
         </ul><!-- End Portfolio Filters -->

         <div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="500">

            @foreach (var item in Model)
            {
               <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@item.Sinif1">
                  <img src="@item.ImgUrl" class="img-fluid" alt="">
                  <div class="portfolio-info">
                     <h4>@item.Baslik</h4>
                     <p>@item.Aciklama</p>
                     <a href="@item.ImgUrl" title="@item.Baslik" data-gallery="portfolio-gallery-@item.Sinif1" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>
                     <a href=" " title="More Details" class="details-link"><i class="bi bi-link-45deg"></i></a>
                  </div>
               </div>

               <!-- End Portfolio Item -->
            }


         </div><!-- End Portfolio Container -->

      </div>

   </div>

</section><!-- /Portfolio Section -->
@await Component.InvokeAsync("_ReferansComponentPartial")